<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practicaltest01.PracticalTest01MainActivity">

    <Button
        android:id="@+id/navigate_to_secondary_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/navigate_to_secondary_activity" />

    <EditText
        android:id="@+id/operand_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigate_to_secondary_activity_button"
        android:layout_alignParentLeft="true"
        android:ems="20"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/operand_1"
        android:text="@string/plus" />

    <Button
        android:id="@+id/minus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/operand_1"
        android:layout_alignEnd = "@id/operand_1"
        android:text="@string/minus"/>

    <EditText
        android:id="@+id/operand_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_button"
        android:layout_alignParentLeft="true"
        android:ems="20"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operand_2"
        android:gravity="center"
        android:text="0"/>


</RelativeLayout>